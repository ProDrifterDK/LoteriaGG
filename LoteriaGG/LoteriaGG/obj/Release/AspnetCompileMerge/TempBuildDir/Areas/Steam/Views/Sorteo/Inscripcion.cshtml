@using Datos.SqlData;
@{
    List<TBL_SORTEO> lista = ViewBag.Sorteos;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <title>Sorteos - LoteriaGG</title>
    <link rel="stylesheet" href="~/Content/estiloSorteo.css">
    <link href="http://cdn.phpoll.com/css/animate.css" rel="stylesheet">
</head>

<body>
    <style>
        .dt-toolbar {
            background-color: rgba(92, 239, 192, 0);
            border-radius: 0px 0px 30px 30px;
            border-color: rgba(0, 0, 0, 0);
        }

        .dt-toolbar-footer {
            border-color: rgba(92, 239, 192, 50);
            background-color: rgba(92, 239, 192, 0);
        }

        #tblFormulario td, #tblFormulario th {
            background-color: rgba(92, 239, 192, 0);
            border-color: rgba(92, 239, 192, 50);
            color: #5a1646;
        }

        .dt-toolbar {
            background-color: rgba(92, 239, 192, 0);
            border-color: rgba(92, 239, 192, 50);
        }

        div.dataTables_length select {
            background-color: rgba(92, 239, 192, 0);
            border-color: rgba(92, 239, 192, 50);
        }

        div.dataTables_filter {
            background-color: rgba(92, 239, 192, 0);
            border-color: rgba(92, 239, 192, 50);
            text-align: right;
        }

            div.dataTables_filter input {
                background-color: rgba(92, 239, 192, 0);
                border-color: rgba(92, 239, 192, 50);
                margin-left: 0.5em;
                display: inline-block;
            }

        .dt-toolbar::after(2) {
            border-color: rgba(92, 239, 192, 50);
            background-color: rgba(92, 239, 192, 0);
        }
    </style>
    <div class="row">
        <div class="col-lg-12" style="position:absolute;top:50%;transform:translateY(-50%)">
            <div class="main col-lg-7 col-md-7 col-sm-10 col-xs-10" style="background-color:rgba(92, 239, 192, 0.41); border-radius:10px">
                <div class="row">
                    <br />
                    <br />
                    <div class="col-lg-1">
                    </div>
                    <div class="col-lg-10">
                        <table id="tblFormulario" @*style="background-color:#000"*@ class="table table-striped table-bordered dt-responsive nowrap" style="border-color:rgba(92, 239, 192, 50)" cellspacing="0">
                            <thead style="border-color:rgba(92, 239, 192, 50)">
                                <tr style="border-color:rgba(92, 239, 192, 50)">
                                    <th style="border-color:rgba(92, 239, 192, 50);background-color: rgba(92, 239, 192, 0)">Sorteo</th>
                                    <th style="border-color:rgba(92, 239, 192, 50);background-color: rgba(92, 239, 192, 0)">Fecha Inicio</th>
                                    <th style="border-color:rgba(92, 239, 192, 50);background-color: rgba(92, 239, 192, 0)">Fecha de Termino</th>
                                    <th style="border-color:rgba(92, 239, 192, 50);background-color: rgba(92, 239, 192, 0)">Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>
                <br />
                <br />
            </div>
        </div>
    </div>

</body>
<script src="~/scripts/jquery.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        cargar();
    });
    function cargar(){

        $("#tblFormulario").DataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6>'f<'col-sm-6 col-xs-6 hidden-xs'>r>" +
        "t" +
            "<'dt-toolbar-footer'<'col-sm-5 col-xs-12 hidden-xs'i><'col-sm-3 col-xs-12'l><'col-sm-4 col-xs-12'p>>",
            "lengthMenu": [[-1, 10, 25, 50], ["All", 10, 25, 50]],
            "ordering": false,

            "columns": [
                { "data": "Id" },
                { "data": "FInicio" },
                { "data": "FFin" },
                { "data": "action" }
            ],
            "autoWidth": true,
            "ajax": {
                "url": "@Url.Action("JsonTabla2", "Sorteo")",
                "type": "POST"
            },
        });

    }

</script>