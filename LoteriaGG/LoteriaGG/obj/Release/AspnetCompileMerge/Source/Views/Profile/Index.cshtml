@model Datos.SqlData.TBL_USUARIO
@{ 
    if(Model.USU_ACCOUNT == null)
    {
        Url.Action("Logout", "Home");
    }
    string apellido = Model.USU_APELLIDO == null || Model.USU_APELLIDO == "" ? "Debe actualizar su perfil" : Model.USU_APELLIDO;
    string nombre = Model.USU_NOMBRE == null || Model.USU_NOMBRE == "" ? "Debe actualizar su perfil" : Model.USU_NOMBRE;
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <title>Acerca de</title>
    <link href="~/Content/estiloPerfil.css" rel="stylesheet" />
    <link href="http://cdn.phpoll.com/css/animate.css" rel="stylesheet">
</head>
<body>
    <div class="col-lg-12" style="position:absolute;top:50%;transform:translateY(-50%)">
        <div class="row">
            <div class="main container-fluid col-lg-6 col-md-8 col-sm-12 col-xs-12 text-center" style="border:solid #212121;background-color:#151515;border-radius:30px 30px 0px 0px">
                <div>
                    <h2 style="color:#456b7b"><b>Perfil</b></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="main container-fluid col-lg-6 col-md-8 col-sm-12 col-xs-12" style="background:#151515;border:solid #212121;border-radius:0px 0px 30px 30px">
                <section class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <a href="/Profile/CambiarContrasena" class="btn btn-primary" style="color:#1d42bf;background-color:rgba(0, 0, 0, 0.00);border:none">Cambiar contraseña</a>
                    <a href="/Profile/EditarMail" class="btn btn-primary" style="color:#1d42bf;background-color:rgba(0, 0, 0, 0.00);border:none">Cambiar Email</a>  <!--CREAR-->
                    <a href="/Profile/ObtenerSorteo" class="btn btn-primary" style="color:#1d42bf;background-color:rgba(0, 0, 0, 0.00);border:none">Obtener Sorteo</a><!--CREAR-->
                    <a href="/Profile/EditarPerfil" class="btn btn-primary" style="color:#1d42bf;background-color:rgba(0, 0, 0, 0.00);border:none">Editar Perfil</a>
                    @*<li>
                        <a href="" class="btn btn-primary"></a>
                    </li>*@
                </section>
                <section class="col-lg-8" style="border-left:3px solid">
                    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div style="font-size:13px;color:rgba(196, 196, 196, 0.83)">
                            <!-- Nombre de invocador, Nombre, apellido, mail, password-->
                            <!-- Editar {perfil, cambiar contraseña}-->
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Nombre de Usuario: @Model.USU_ACCOUNT</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Nombre: @nombre</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Apellido: @apellido</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Email: @Model.USU_EMAIL</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>Nombre de Invocador: @Model.USU_SUMMONER</label>
                                </div>
                            </div>
                        </div>
                    </article>
                </section>
            </div>
        </div>
    </div>
