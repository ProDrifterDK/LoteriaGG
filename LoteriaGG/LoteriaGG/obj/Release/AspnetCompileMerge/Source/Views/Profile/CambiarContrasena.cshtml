</style>
    <div class="main container-fluid jumbotron myBackground">
        <section class="row">
            <article class="col-xs-12 col-sm-10 col-md-12 col-lg-8">
                <div style="font-size:15px">
                    <div class="row">
                        @if (resp == 0)
                        {
                            <div class="row">
                                <h3>Contraseña Cambiada Exitosamente</h3>
                            </div>
                            <div class="row">
                                <a href="/Profile/Index" type="button" class="col-lg-5 btn btn-secondary" style="color:gray;border-color:grey;background-color:rgba(57, 36, 57, 0.79)">Volver</a>
                            </div>
                        }
                        else
                        {
                            using (Html.BeginForm("CambiarContrasena", "Profile", null, FormMethod.Post, new { id = "form", @class = "form-horizontal", @data_parsley_validate = "true", @novalidate = "true", @method = "get" }))
                            {
                                <div class="col-lg-6">
                                    <div class="col-lg-12">
                                        <label style="color:goldenrod">Nueva Contraseña: </label>
                                        @if (resp == null || resp == 1)
                                        {
                                            <input type="password" style="background-color:rgba(255, 255, 255, 0.57)" name="nContrasena" placeholder="Ingresar nueva contraseña..." />
                                        }
                                        else if (resp == 2 || resp == 3)
                                        {
                                            <input type="password" name="nContrasena" style="background-color:rgba(255, 255, 255, 0.57);border-color:red" placeholder="Ingresar nueva contraseña..." />
                                            <label style="color:red;font-size:12px">Las contraseñas no coinciden</label>
                                        }
                                    </div>
                                    <div class="col-lg-12">
                                        <label style="color:goldenrod">Repetir Nueva Contraseña: </label>
                                        @if (resp == null || resp == 1)
                                        {
                                            <input type="password" name="nContrasenaR" style="background-color:rgba(255, 255, 255, 0.57)" placeholder="Ingresar nueva contraseña..." />
                                        }
                                        else if (resp == 2 || resp == 3)
                                        {
                                            <input type="password" name="nContrasenaR" style="background-color:rgba(255, 255, 255, 0.57);border-color:red" placeholder="Ingresar nueva contraseña..." />
                                            <label style="color:red;font-size:12px">Las contraseñas no coinciden</label>
                                        }
                                    </div>
                                    <div class="col-lg-12">
                                        <label style="color:goldenrod">Contraseña actual: </label>
                                        @if (resp == null || resp == 3)
                                        {
                                            <input type="password" style="background-color:rgba(255, 255, 255, 0.57)" name="aContrasena" placeholder="Ingresar contraseña..." />
                                        }
                                        else
                                        {
                                            if (resp == 1 || resp == 2)
                                            {
                                                <input type="password" name="aContrasena" class="escribir" style="background-color:rgba(255, 255, 255, 0.57);border-color:red" placeholder="Ingresar contraseña..." />
                                                <label style="color:red;font-size:12px">La contraseña ingresada es incorreta</label>
                                            }
                                            else if (resp == 3)
                                            {
                                                <input type="password" name="aContrasena" style="background-color:rgba(255, 255, 255, 0.57)" placeholder="Ingresar contraseña..." />
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                        <div style="font-size:13px">
                                            <br />
                                            <br />
                                            <br />
                                            <br />
                                            <div class="row">
                                                <input type="submit" value="Guardar" class="col-lg-5 btn btn-success" style="border-color:grey; background-color:rgba(92, 184, 92, 0.82)" />
                                                @*<input type="submit" value="Guardar" class="col-lg-5 btn btn-primary" style="background-color:rgba(218, 165, 32, 0.88);color:grey;border-color:grey" />*@
                                                @*<input type="submit" value="Guardar" class="col-lg-5 btn btn-primary" style="background-color:goldenrod;color:grey;border-color:grey" />*@
                                            </div>
                                            <br />
                                            <div class="row">

                                                @*<input type="submit" value="Guardar" class="col-lg-5 btn btn-primary" style="background-color:goldenrod;color:grey;border-color:grey" />*@
                                                @*<button type="button" class="col-lg-5 btn btn-secondary" style="color:gray;border-color:grey;background-color:rgba(65, 65, 65, 0.59)">Volver</button>*@
                                                <a href="/Profile/Index" type="button" class="col-lg-5 btn btn-secondary" style="color:gray;border-color:grey;background-color:rgba(57, 36, 57, 0.79)">Volver</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </article>

        </section>
    </div>

